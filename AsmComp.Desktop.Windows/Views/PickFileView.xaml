<UserControl x:Class="AsmComp.Desktop.Windows.Views.PickFileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AsmComp.Desktop.Windows.Views"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="260">
    <StackPanel Background="White">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="File #1: " Margin="0,0,5,0" />
            <TextBlock Text="" x:Name="selectedFile1" />
            <Button Content="Select" Width="60" Click="OnClickChooseLeft" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
            <TextBlock Text="File #2: " Margin="0,0,5,0" />
            <TextBlock Text="" x:Name="selectedFile2" />
            <Button Content="Select" Width="60" Click="OnClickChooseRight" />
        </StackPanel>
        <Button Content="Compare Assemblies" Margin="0,5,0,0" Width="180" x:Name="CompareAssemblies" Click="OnClickCompareAssemblies" />
    </StackPanel>
</UserControl>
